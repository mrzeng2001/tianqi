.container {
    padding: 20px;
  }
  .chart-container {
    display: flex;
    justify-content: center; /* 水平居中 */
    align-items: center; /* 垂直居中（如果外层高度足够） */
    width: 100%; /* 让容器占满屏幕宽度 */
    height: 300px; /* 可以根据需要调整 */
  }
  ec-canvas {
    width: 100%; /* 设置图表宽度 */
    height: 100%; /* 设置图表高度 */
  }
  
  .data-list {
    margin-top: 20px;
  }
  
  .data-item {
    background: #f8f8f8;
    padding: 10px;
    border-radius: 5px;
    font-size: 18px;
    margin-bottom: 10px;
  }
  